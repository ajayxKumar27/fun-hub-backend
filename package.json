{
  "name": "gaming-backend",
  "version": "1.0.0",
  "description": "Real-time multiplayer gaming backend server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "build:watch": "tsc --watch",
    "dev:watch": "concurrently \"npm run build:watch\" \"npm run dev\""
  },
  "keywords": [
    "gaming",
    "multiplayer",
    "socket.io",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/express": "^4.17.20",
    "@types/node": "^20.5.0",
    "ts-node": "^10.9.1",
    "concurrently": "^8.2.0"
  }
}
